{
  "name": "Clichik",
  "version": "0.0.1",
  "author": "Aravind Metku",
  "description": "Got a virtual party? Clichik will take care of taking screenshots while you enjoy you party!",
  "permissions": [
    "desktopCapture",
    "activeTab",
    "declarativeContent",
    "storage",
    "tabCapture",
    "desktopCapture",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_popup": "window.html",
    "default_icon": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    }
  },
  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": false,
    "open_in_tab": true
  },
  "manifest_version": 2
}
